<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:screenOrientation="portrait"
    android:gravity="bottom">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="2dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/calcScreenColor"
            android:layout_weight="4">
            <TextView
                android:id="@+id/partialResultScreen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:layout_marginRight="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="bottom|right"
                android:textSize="36sp"
                android:layout_weight="1"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/calcScreenColor"
            android:layout_weight="1">
            <TextView
                android:id="@+id/ioScreen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:layout_margin="20dp"
                android:text=""
                android:textSize="48sp"
                android:layout_weight="1"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn7"
                android:text="7"
                android:onClick="onDigit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="22dp"
                android:textSize="18sp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btn8"
                android:text="8"
                android:onClick="onDigit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="22dp"
                android:textSize="18sp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btn9"
                android:text="9"
                android:onClick="onDigit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="22dp"
                android:textSize="18sp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btnDEL"
                android:text="DEL"
                android:onClick="onDel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="22dp"
                android:textSize="18sp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btnAC"
                android:text="AC"
                android:onClick="onClear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="22dp"
                android:textSize="18sp"
                android:layout_weight="1"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn4"
                android:text="4"
                android:onClick="onDigit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="22dp"
                android:textSize="18sp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btn5"
                android:text="5"
                android:onClick="onDigit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="22dp"
                android:textSize="18sp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btn6"
                android:text="6"
                android:onClick="onDigit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="22dp"
                android:textSize="18sp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btnMult"
                android:text="X"
                android:onClick="onMultiply"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="22dp"
                android:textSize="18sp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btnDiv"
                android:text="/"
                android:onClick="onDivide"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="22dp"
                android:textSize="18sp"
                android:layout_weight="1"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn1"
                android:text="1"
                android:onClick="onDigit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="22dp"
                android:textSize="18sp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btn2"
                android:text="2"
                android:onClick="onDigit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="22dp"
                android:textSize="18sp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btn3"
                android:text="3"
                android:onClick="onDigit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="22dp"
                android:textSize="18sp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btnPlus"
                android:text="+"
                android:onClick="onPlus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="22dp"
                android:textSize="18sp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btnMinus"
                android:text="-"
                android:onClick="onMinus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="22dp"
                android:textSize="18sp"
                android:layout_weight="1"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn0"
                android:text="0"
                android:onClick="onDigit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="22dp"
                android:textSize="18sp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btnPoint"
                android:text="."
                android:onClick="onDecimalPoint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="22dp"
                android:textSize="18sp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btnAns"
                android:text="Ans"
                android:onClick="onAnswer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="22dp"
                android:textSize="18sp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btnEquals"
                android:text="="
                android:onClick="onEquals"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="22dp"
                android:textSize="18sp"
                android:layout_weight="2"/>
        </TableRow>

    </TableLayout>

